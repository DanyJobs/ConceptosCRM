
<link href="~/Assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />


@using Model.Entity
@model List<Cliente>
@{
    ViewBag.Title = "BuscarPorCodigo";
    Layout = "~/Views/Shared/_LayoutNulo.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(document).ready(function () {
        $("#tbcliente tbody tr").dblclick(function () {
            var Cliente = {};
            var n, a, m;
            n = Cliente.Codigo = $(this).children().eq('0').text();
            a = Cliente.DatosPersonales = $(this).children().eq('1').text() + " " + $(this).children().eq('2').text();
            m = Cliente.Identificacion = $(this).children().eq('5').text();
            console.info(a, n, m);
            window.opener.obtenerCliente(Cliente);
            window.close();
        });
    });
</script>

<div class="panel panel-default">
    <div class="panel-heading">Buscar Clientes en el Sistema</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                <h2 style="text-align:center; font-family:Arial; font-weight:700;">Buscar Cliente por:</h2>
                <fieldset>
                    <div class="row" style="padding-bottom:8px;">
                        <div class="form-group col-md-3">
                            @Html.Label("Nombre", new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.TextBox("txtnombre", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.Label("Codigo", new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.TextBox("txtcliente", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.Label("Email", new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBox("txtemail", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.Label("Apellido", new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBox("txtapellido", null, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
            <input type="submit" value="Buscar" />
        }
    </div>
</div>

<table id="tbcliente" class="display responsive nowrap">
    <thead>
        <tr>
            <th>Codigo</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Direccion</th>
            <th>Telefono</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var objCliente in Model)
        {
            <tr>
                <td>@objCliente.IdCliente</td>
                <td>@objCliente.Nombre</td>
                <td>@objCliente.Apellido</td>
                <td>@objCliente.Direccion</td>
                <td>@objCliente.Telefono</td>
                <td>@objCliente.Email</td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#tbcliente').DataTable();
        });
    </script>
}
<script src="~/Assets/bootstrap/js/bootstrap.min.js"></script>
<script src="~/Assets/jquery/jquery.min.js"></script>