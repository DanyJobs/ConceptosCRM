@{
    ViewBag.Title = "ReporteVentas";
}
<h2>@Lenguaje.Recurso.Cotizaciones_recientes</h2>

<table class="table">
    <thead>
        <tr class="bg-primary">
            <th>@Lenguaje.Recurso.Cotizacion_idVenta</th>
            <th>@Lenguaje.Recurso.Cotizacion_cliente</th>
            <th>@Lenguaje.Recurso.Cotizacion_fecha</th>
            <th>@Lenguaje.Recurso.Cotizacion_vendedor</th>
            <th>@Lenguaje.Recurso.Cotizacion_IVA</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var objVenta in Model)
        {
            <tr>
                <td>@objVenta.IdVenta</td>
                <td>@objVenta.NombreCliente</td>
                <td>@objVenta.FechaCotizacion.ToString("MM/dd/yyyy")</td>
                <td>@objVenta.IdVendedor</td>
                <td>@objVenta.Iva</td>
                <td>@objVenta.Total</td>

                <td><a class="btn btn-success" href="~/Venta/DetallesVenta/@objVenta.IdVenta"><span class="glyphicon glyphicon-eye-open"></span>|@Lenguaje.Recurso.Ver_detalles</a></td>
                <td><a class="btn btn-info" href="~/Cliente/Update/@objVenta.IdVenta"><span class="fa fa-edit"></span>|@Lenguaje.Recurso.Editar</a></td>
                <td><a class="btn btn-danger" href="~/Cliente/Eliminar/@objVenta.IdVenta"><span class="glyphicon glyphicon-remove">|@Lenguaje.Recurso.Eliminar</span></a></td>
            </tr>
        }

    </tbody>
</table>




