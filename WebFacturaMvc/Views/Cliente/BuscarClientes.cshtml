@using Model.Entity
@model List<Cliente>
@{
    ViewBag.Title = "BuscarPorCodigo";
}
<div class="panel panel-default">
    <div class="panel-heading">@Lenguaje.Recurso.Buscar_titulo</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                <h2 style="text-align:center; font-family:Arial; font-weight:700;">@Lenguaje.Recurso.Buscar_titulo2</h2>
                <fieldset>
                    <div class="row" style="padding-bottom:8px;">
                        <div class="form-group col-md-3">
                            @Html.Label(Lenguaje.Recurso.Clientes_nombre, new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.TextBox("txtnombre", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.Label(Lenguaje.Recurso.Clientes_codigo, new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.TextBox("txtcliente", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.Label("DNI", new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBox("txtdni", null, new { @class = "form-control", @type = "number" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.Label(Lenguaje.Recurso.Clientes_apellidoP, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBox("txtappaterno", null, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>

            <input class="btn btn-primary btn-lg" type="submit" value=@Lenguaje.Recurso.Buscar />
        }
    </div>
</div>

<table id="table_id" class="display responsive nowrap">
    <thead>
        <tr>
            <th>@Lenguaje.Recurso.Clientes_codigo</th>
            <th>@Lenguaje.Recurso.Clientes_nombre</th>
            <th>@Lenguaje.Recurso.Clientes_apellidoP</th>
            <th>Email</th>
            <th>@Lenguaje.Recurso.Clientes_direccion</th>
            <th>@Lenguaje.Recurso.Clientes_telefono</th>
            <th>@Lenguaje.Recurso.Clientes_operaciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var objCliente in Model)
        {

            <tr>
                <td>@objCliente.IdCliente</td>
                <td>@objCliente.Nombre</td>
                <td>@objCliente.Apellido</td>
                <td>@objCliente.Email</td>
                <td>@objCliente.Direccion</td>
                <td>@objCliente.Telefono</td>
                <td>
                    <a class="btn btn-success" href="~/Cliente/Find/@objCliente.IdCliente"><span class="glyphicon glyphicon-eye-open"></span></a>
                    <a class="btn btn-info" href="~/Cliente/Update/@objCliente.IdCliente"><span class="fa fa-edit"></span></a>
                    <a class="btn btn-danger" href="~/Cliente/Eliminar/@objCliente.IdCliente"><span class="fa fa-book"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>
}