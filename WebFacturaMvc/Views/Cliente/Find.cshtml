@model Model.Entity.Cliente
@{
    ViewBag.Title = Model.Nombre+' '+Model.Appaterno;
}

<ol class="breadcrumb">
    <li><a href="~/">@Lenguaje.Recurso.Clientes</a></li>
    <li class="active">@(Model.Nombre + ' ' + Model.Appaterno)</li>

</ol>

<div class="panel panel-default">
    <div class="panel-heading">@Lenguaje.Recurso.Find_titulo</div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>@Lenguaje.Recurso.Clientes_codigo</dt>
            <dd>@Model.IdCliente</dd>

            <dt>@Lenguaje.Recurso.Clientes_nombre</dt>
            <dd>@Model.Nombre</dd>

            <dt>@Lenguaje.Recurso.Clientes_apellidos</dt>
            <dd>@(Model.Appaterno+' '+Model.Apmaterno)</dd>

            <dt>DNI</dt>
            <dd>@Model.Dni</dd>

            <dt>@Lenguaje.Recurso.Clientes_direccion</dt>
            <dd>@Model.Direccion</dd>

            <dt>@Lenguaje.Recurso.Clientes_telefono</dt>
            <dd>@Model.Telefono</dd>
        </dl>
    </div>
    <div class="form-actions">
        |@Html.ActionLink(Lenguaje.Recurso.Regresar_al_Listado, "Index")
    </div>
</div>
