
@model List<Model.Entity.Categoria>
@{
    ViewBag.Title = "Buscar Categoria";
    Layout = "~/Views/Shared/_LayoutNulo.cshtml";
}
<link href="~/Assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Js/alertify.min.js"></script>
<link href="~/Css/alertify.core.css" rel="stylesheet" />
<link href="~/Css/alertify.default.css" rel="stylesheet" />

<script type="text/javascript">
    $(document).ready(function () {
        $("#tbCategoria tbody tr").dblclick(function () {
            var Categoria = {};
            var n, a;
            n = Categoria.Codigo = $(this).children().eq('0').text();
            a = Categoria.Nombre = $(this).children().eq('1').text();
            window.opener.obtenerCategoria(Categoria);
            window.close();
        });
    });
</script>

<div class="panel-heading" style="background:#2C3E50; color:#ffffff;"><h2 style="text-align:center; font-family:Arial; font-weight:100;">Buscar Categoria por:</h2></div>
<br />
<table class="display responsive nowrap" id="tbCategoria">
    <thead>
        <tr>
            <th>Codigo</th>
            <th>Nombre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var objCategoria in Model)
        {
            <tr>
                <th>@objCategoria.IdCategoria</th>
                <th>@objCategoria.Nombre</th>
            </tr>
        }
    </tbody>
</table>

<div class="text-primary text-danger text-center">
    @ViewBag.MensajeError;
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#tbCategoria').DataTable();
        });
    </script>
}
<script src="~/Assets/bootstrap/js/bootstrap.min.js"></script>
<script src="~/Assets/jquery/jquery.min.js"></script>