<link href="~/Assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />


@using Model.Entity
@model List<WebFacturaMvc.Datos.proveedor>
@{
    ViewBag.Title = "BuscarPorCodigo";
    Layout = null;
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(document).ready(function () {
        $("#tbcliente tbody tr").dblclick(function () {
            var Cliente = {};
            var n, a, m;
            n = Cliente.Codigo = $(this).children().eq('0').text();
            a = Cliente.DatosPersonales = $(this).children().eq('1').text() + " " + $(this).children().eq('2').text();
            m = Cliente.Identificacion = $(this).children().eq('3').text();
            console.info(a, n, m);
            window.opener.obtenerCliente(Cliente);
            window.close();


        });
    });
</script>

<div class="panel panel-default">
    <div class="panel-heading">Buscar proveedores en el Sistema</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                <h2 style="text-align:center; font-family:Arial; font-weight:700;">Buscar Proveedor por:</h2>
                <fieldset>
                    <div class="row" style="padding-bottom:8px;">
                        <div class="form-group col-md-3">
                            @Html.Label("Nombre", new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.TextBox("txtnombre", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.Label("Codigo", new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.TextBox("txtid", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.Label("Apellido", new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBox("txtappaterno", null, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>

            <input type="submit" value="Buscar" />
        }
    </div>
</div>

<table class="table table-striped" id="tbcliente">

    <thead>
        <tr>
            <th>Codigo</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Calle</th>
            <th>#Exterior</th>
            <th>Colonia</th>
            <th>CP</th>
            <th>Email</th>
            <th>Telefono</th>
        </tr>
    </thead>
    <tbody>        
            @foreach (var objProveedor in Model)
            {
                <tr>
                    <td>@objProveedor.idProveedor</td>
                    <td>@objProveedor.nombre</td>
                    <td>@objProveedor.apellido</td>
                    <td>@objProveedor.calle</td>
                    <td>@objProveedor.numExt</td>
                    <td>@objProveedor.colonia</td>
                    <td>@objProveedor.cp</td>
                    <td>@objProveedor.email</td>
                    <td>@objProveedor.telefono</td>
                </tr>
            }        

    </tbody>
</table>
<script src="~/Assets/bootstrap/js/bootstrap.min.js"></script>
<script src="~/Assets/jquery/jquery.min.js"></script>
