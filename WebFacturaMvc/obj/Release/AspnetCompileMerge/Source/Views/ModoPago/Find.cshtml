@model Model.Entity.ModoPago
@{
    ViewBag.Title = Model.Nombre;
}

<ol class="breadcrumb">
    <li><a href="~/">@Lenguaje.Recurso.Categorias</a></li>
    <li class="active">@(Model.Nombre)</li>

</ol>

<div class="panel panel-default">
    <div class="panel-heading">@Lenguaje.Recurso.Informacion</div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>@Lenguaje.Recurso.Codigo</dt>
            <dd>@Model.NumPago</dd>

            <dt>@Lenguaje.Recurso.ModoPago_nombre</dt>
            <dd>@Model.Nombre</dd>

            <dt>@Lenguaje.Recurso.Descripcion</dt>
            <dd>@Model.Otros</dd>
        </dl>
    </div>
    <div class="form-actions">
        |@Html.ActionLink(Lenguaje.Recurso.Regresar_al_Listado, "Index")
    </div>
</div>
